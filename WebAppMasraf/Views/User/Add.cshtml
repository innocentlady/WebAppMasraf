@model WebAppMasraf.Models.User
@{
}
<link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<!------ Include the above in your HEAD tag ---------->
<h1>Add User</h1>
<div class="container">
    <div class="row">
    	<div class="col-md-4 col-md-offset-4">
    		<div class="panel panel-default">
			  	<div class="panel-heading">
			    	<h3 class="panel-title">Login via site</h3>
			 	</div>
			  	<div class="panel-body">
			    	<form method="post" action="Add" accept-charset="UTF-8" role="form" class="mt-5">
                    <fieldset>
			    	  	<div class="form-group">
							  <label for=" " class="form-label">Email</label>
								<input type="text" class="form-control" asp-for="UEmail">
			    		</div>
						<div class="form-group">
							  <label for=" " class="form-label">Name</label>
								<input type="text" class="form-control" asp-for="UName">
			    		</div>
							<div class="form-group">
								<label for=" " class="form-label">SurName</label>
								<input type="text" class="form-control" asp-for="USurname">
							</div>
							<div class="form-group">
								<label for=" " class="form-label">Pasword</label>
								<input type="text" class="form-control" asp-for="UPasword">
							</div>
								<div class="form-group">
								<label for=" " class="form-label">Phone Number</label>
								<input type="text" class="form-control" asp-for="UPhoneNumber">
							</div>
				
							<div class="form-group">
								<label for=" " class="form-label">Birth Of Date</label>
								<input type="date" class="form-control" asp-for="UDateTime">
							</div>
							<div class="form-group">
								<label for=" " class="form-label">Role</label>
								<input type="number" class="form-control" asp-for="UUserRoleId">
							</div>
				

				<input class="btn btn-lg btn-success btn-block" type="submit" value="Register">
			    	</fieldset>
			      	</form>
                      <hr/>
          
			    </div>
			</div>
		</div>
	</div>
